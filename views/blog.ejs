<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body class="bg-dark">
    <%- include('./partials/nav') %>
  <div class="container">
    <h1 class="text-white mt-4"><%= blog.title %></h1>
    <img src="<%= blog. coverImageURL%>" width="300vw">
    <p class="container text-white"><%= blog.body %></p>

  </div>
<div class="container mt-3">
<img src="<%= blog.createBy.profileImageURL %>" width="100px"> <span class="text-white mr-1"><%= blog.createBy.fullName %></span>
</div>

<div class="container mt-3">
<h1 class="text-white">Comments(<%= comments.length %>)</h1>
<% if(locals.user){ %>
    <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3 mt-5">
          <input type="text" class="form-control" id="content" name="content" placeholder="Do comment" required>
        </div>
        <button type="submit" class="btn btn-primary" >Submit</button>
      </form>
     
    </div>
<% } %>
<div class="mt-4 text-white container" >

    <% comments.forEach(comment => { %>
        <div>
            <img src="<%= comment.createBy.profileImageURL %>" width="50px">
            <%= comment.createBy.fullName %>
            <p><%= comment.content %></p>
        </div>
   <% });  %>
  </div>
    <%- include('./partials/script') %>
</body>
</html>