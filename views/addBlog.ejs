<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body class="bg-dark">
    <%- include('./partials/nav') %>
    <h1 class="container">Blog</h1>
    <div class="container mt-3">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3" >
                <div class="mt-2">
                    <label for="coverImage" class="form-labecovel text-light font-bold" >Cover Image</label>
                    <input type="file" class="form-control" id="coverImage"
                    name="coverImage" >
                </div>
             
              <label for="exampleInputEmail1" class="form-label text-light font-bold mt-2">Title</label>
              <input type="text" class="form-control" id="title"
              name="title" >
              <label for="body" class="form-label text-light font-bold mt-2">Body</label>
              <textarea class="form-control" placeholder="Write your Blog Here" id="blog" name="body"></textarea>
              <div class="mt-2">
                
                  <button type="submit" class="btn btn-primary">Submit</button>
              </div>
          </form>
    </div>   
<%- include('./partials/script') %>
</body>
</html>